# Template file for 'getdns'
pkgname=getdns
version=1.4.1
revision=1
build_style=gnu-configure
makedepends="libidn-devel unbound-devel"
short_desc="A modern asynchronous DNS API"
maintainer="codebam <codebam@riseup.net>"
license="BSD-3-Clause"
homepage="https://github.com/getdnsapi/getdns"
distfiles="https://getdnsapi.net/dist/getdns-${version}.tar.gz"
checksum="245233dc780f615b6ab1472f2b9cdcd957a451a736f3036717d0da466ab1c51e"

post_install() {
	vlicense COPYING
}

getdns-devel_package() {
	depends="getdns-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/share/man/man3
		vmove "usr/lib/*.so"
		vmove "usr/lib/*.a"
	}
}
